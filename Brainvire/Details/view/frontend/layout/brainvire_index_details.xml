<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Brainvire\Details\Block\Index\Details" name="details"
                   template="Brainvire_Details::index/details.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="brainvire_image">
                <arguments>
                    <argument name="block_id" xsi:type="string">brainvire</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>